{
  "version": 2,
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/vouchers",
      "destination": "/api/vouchers.js"
    },
    {
      "source": "/(.*)", 
      "destination": "/public/$1"
    }
  ]
}